<%- include('./partials/header.ejs') %>

    <%- include('./partials/nav.ejs') %>

        <div class="<% if (locals.posts.length>0) { %>
            home_container
           <% } else{%>
               center_cont
               <%}%>">
            <% if (locals.posts.length>0) { %>
                <% posts.forEach(post=> { %>
                    <a href="/blog/<%= post._id %>">
                        <div class="blog_container">
                            <div class="cover_image">
                                <img src="<%= post.image %>" alt="<%= post.image %>">
                            </div>
                            <h5>
                                <%= post.title %>
                            </h5>
                            <a href="/blog/<%= post._id %>"><button>Read</button></a>
                        </div>
                    </a>

                    <% }) %>
                        <% }else {%>
                            <div class="else_Cont">
                                <h1>You Have 0 Blogs</h1>
                                <a href="/addblog"><button id="btn">Create Blog</button></a>
                            </div>

                            <% }%>
        </div>

        <%- include('./partials/footer.ejs') %>