<%- include('./partials/header.ejs') %>
    <%- include('./partials/nav.ejs') %>

        <div class="home_container">
                <div class="form-container">
                    <h1>Edit Blog</h1>
                    <form action="/updateBlog/<%= post._id %>" method="post" enctype="multipart/form-data">
                        <div class="input_field">
                            <label for="name">Title</label>
                            <input type="text" id="name" placeholder="Girish Rajora" name="title" value="<%= post.title %>" />
                        </div>

                        <div class="input_field">
                            <label for="description">Body</label>
                            <textarea id="description" cols="30" rows="10" name="content" ><%= post.content %></textarea>
                        </div>
                        <div class="input_field">
                            <label for="image">Cover Image</label>
                            <input type="file" id="image" required name="image">
                            <input type="hidden" value="<%= post.image %>" name="old_image">
                        </div>
                        <button type="submit" id="sub">Publish</button>

                    </form>
                </div>
            </div>


        <%- include('./partials/footer.ejs') %>