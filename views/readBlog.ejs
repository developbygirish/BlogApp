<%- include('./partials/header.ejs') %>
    <%- include('./partials/nav.ejs') %>
<div class="home_container">
    <div class="blog_cont">
        <h1>
            <%= blog.title %>
        </h1>
        <div class="creator_det">
            <div class="cre_img" >
                <img src="<%= blog.createdBy.profileImage %>" alt="">
            </div>
            <h3><%= blog.createdBy.name %></h3>
        </div>
        <div class="img">
            <img src="<%= blog.image %>" alt="">
        </div>
        <p>
            <%= blog.content %>
        </p>

        <div class="comments">
            <h1>Comments (<%= comment.length %>)</h1>
            <form action="/comment/<%= blog._id %>" method="post">
                <input type="text" name="com" id="com_inp">
                <input type="submit" value="comment" id="sub">
            </form>
            <% comment.forEach(cum => { %>
                <div class="showComments">
                    <div class="comment_panel">
                        <div class="comment_img">
                            <img src="<%= cum.createdBy.profileImage %>" alt="">
                        </div>
                        <div class="comment_det">
                            <h4><%= cum.createdBy.name %></h4>
                            <p><%= cum.comment %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>
</div>
       

        <%- include('./partials/footer.ejs') %>